<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/loading"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_error"
            android:src="@drawable/error_icon"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/error"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/errorColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/drinks_category"
        android:text="@string/explore_by_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_below="@+id/drinks_category"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vodka"
            android:background="@color/blue_for_buttons"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/beer"
            android:background="@drawable/beer"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/whisky"
            android:background="@drawable/whiskey"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="1dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/gin"
            android:background="@color/colorAppBar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="1dp"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommended_layout"
        android:layout_marginTop="3dp"
        android:layout_below="@id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommended_drinks"
            android:layout_weight="1"
            android:text="@string/recommended_drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/see_all"
            android:layout_weight="1"
            android:textColor="#03A9F4"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
            android:text="@string/see_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="10dp" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:id="@+id/drinks_recyclerview"
        android:layout_below="@+id/recommended_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>